package game.interaction;
// Warrior에 huntTroll을 만들어주세요.
// Troll 클래스를 생성해주시고
// 생성된 트롤과 전사가 상호작용하게 해 주시고
// Main02에서 둘을 상호작용도 시켜보세요.

public class Troll {
	private int hp;
	private int atk;
	private int def;
	
	public Troll() {
		this.hp=4;
		this.atk=7;
		this.def=1;
	}
	public void doBattle (int uAtk) {
		hp=(hp+def)-uAtk();
		System.out.println("트롤의 남은 체력 : "+hp);
	}
	public int getHp() {
		return hp;
	}
	public void setHp(int hp) {
		this.hp = hp;
	}
	public int getAtk() {
		return atk;
	}
	public void setAtk(int atk) {
		this.atk = atk;
	}
	public int getDef() {
		return def;
	}
	public void setDef(int def) {
		this.def = def;
	}
	
	

}
