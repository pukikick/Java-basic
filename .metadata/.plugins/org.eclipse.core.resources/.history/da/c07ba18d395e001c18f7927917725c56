package interaction;

public class Seller {
	private int money;
	private int mango;
	private int price;
	
	public Seller() {
		int money = 0;
		int price = 1000;
		int mango ;
	}

	public void sellMango(int mango) {
		money = (price * mango) - mango;
		if (mango<=0) {
			System.out.println("망고가 모자랍니다.");
			return;
		}
	}
	
	public void showSeller() {
		System.out.println("현재 소지금 : "+money);
		System.out.println("망고 개수 : "+mango);
	}
	public void getMango() {
		
	}

}
