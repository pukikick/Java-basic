package interaction;

public class Seller {
	// 변수로 int money(매출), int mango(재고)를 가집니다.
	private int money; // 매출액
	private int mango; // 재고(개수)
	// private int price;
	
	public Seller() {
		int money = 0;
		int price = 1000;
		int mango ;
	}

	public void sellMango(int mango) {
		money = price * mango;
		
		if (mango<=0) {
			System.out.println("망고가 모자랍니다.");
			return;
		}
	}
	
	public void showSeller() {
		System.out.println("현재 소지금 : "+money);
		System.out.println("망고 개수 : "+mango);
	}
	public void getMango() {
		
	}

}
