package game.interaction;
// 골렘 생성
public class Golem {
	private int hp;
	private int atk;
	private int def;
	
	public Golem() {
		this.hp = 40;
		this.atk = 15;
		this.def = 7;
	}
	
	public void doBattle (int uAtk) {
		hp=(hp+def)-uAtk;
		System.out.println("골렘의 남은 체력 : "+hp);
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
	
}
