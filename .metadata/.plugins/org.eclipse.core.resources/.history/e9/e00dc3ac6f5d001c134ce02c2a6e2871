package game.accessmodifier;

public class Commoner {

		//레벨, 체력, 아이디, 마나수치
		private int hp;
		private int mp; // private, protected 차이 비교
		private int lv;
		private int exp;
		
		public Commoner() {
			this.hp = 20;
			this.mp = 10;
			this.lv = 1;
			this.exp = 0;
		}
		
		// setter/getter의 기본형을 만드는 방법은
		// 마우스클릭->source->generate/setters를 선택해 
		// 생성해줄 수 있습니다.
		public int getHP() {
			return hp;
		}
		public void setHP(int hp) {
			this.hp=hp;
		}
		public int getMp() {
			return mp;
		}
		
	}